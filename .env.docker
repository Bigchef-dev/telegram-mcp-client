# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Mistral AI Configuration
MISTRAL_API_KEY=your_mistral_api_key_here

# Optional: PostgreSQL Configuration (if using PostgreSQL instead of SQLite)
# POSTGRES_PASSWORD=your_strong_password_here
# DATABASE_URL=postgresql://telegram_user:your_strong_password_here@postgres:5432/telegram_mcp

# Optional: Redis Configuration
# REDIS_URL=redis://redis:6379

# Node Environment
NODE_ENV=production

# Optional: Custom MCP Server URL
# MCP_SERVER_URL=http://mcp-server:3001/mcp/

# Optional: Logging Configuration
# LOG_LEVEL=info
# LOG_FORMAT=json

# Optional: Application Configuration
# APP_PORT=3000
# APP_HOST=0.0.0.0